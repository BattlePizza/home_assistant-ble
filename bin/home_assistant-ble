#!/usr/bin/env ruby

require 'home_assistant/ble'
require 'yaml'

config_file = ARGV.shift
config = {}
if config_file
  config = YAML.load_file(config_file)
else
  $stderr.puts 'No configuration file specified, will use all default values'
end

detector = HomeAssistant::Ble::Detector.new(config)

detector.run
